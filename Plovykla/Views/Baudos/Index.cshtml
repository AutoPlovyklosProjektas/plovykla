@model IEnumerable<Plovykla.Models.Baudos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Baudų sąrašas</h2>

<p>
    <a asp-action="Create">Pridėti naują baudą</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.baudosAprasymas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nuostolis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vartotojai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uzsakymas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.baudosAprasymas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nuostolis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vartotojai.vartotojoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uzsakymas.uzsakymoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.baudosId">Redaguoti</a> |
                <a asp-action="Delete" asp-route-id="@item.baudosId">Pašalinti</a>
            </td>
        </tr>
}
    </tbody>
</table>
