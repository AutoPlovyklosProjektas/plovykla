@model Plovykla.Models.Vartotojai

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="login">Darbuotojo redagavimas</h3>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="vartotojoId" />
            <input type="hidden" asp-for="username" />
            <input type="hidden" asp-for="password" />
            <div class="form-group">
                <label  class="control-label login">Vardas</label>
                <input asp-for="vardas" class="form-control" />
                <span asp-validation-for="vardas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label login">Pavarde</label>
                <input asp-for="pavarde" class="form-control" />
                <span asp-validation-for="pavarde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label login">Elektroninis paštas</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Redaguoti" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
