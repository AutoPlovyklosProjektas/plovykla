@model IEnumerable<Plovykla.Models.Trukumai>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medziagos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medziagos.medziaga)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.trukumoId">Uzsakyta!</a>
            </td>
        </tr>
}
    </tbody>
</table>
