@model Plovykla.Models.Trukumai

@{
    ViewData["Title"] = "Trūkstamos medžiagos pridėjimas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Trūkstamos medžiagos pridėjimas</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="medziagosId" class="control-label"></label>
                <select asp-for="medziagosId" class ="form-control" asp-items="ViewBag.medziagosId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Pridėti" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atgal į sąrašą</a>
</div>

