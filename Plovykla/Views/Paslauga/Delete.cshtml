@model Plovykla.Models.Paslauga

@{
    ViewData["Title"] = "Paslaugos šalinimas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Paslaugos šalinimas</h2>

<h3>Ar esate tikras, kad norite pašalinti paslaugą?</h3>
<div>
    <h4>Paslauga</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.paslaugosKaina)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.paslaugosKaina)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.paslaugosPavadinimas)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.paslaugosPavadinimas)
        </dd>
